<div class="row pt-3">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-header">
                <span class="card-title">Chart 1</span>
            </div>
            <div class="card-body">
                <div>
                    <canvas id="myChart1" width="400" height="400"></canvas>
                </div>
            </div>
        </div>
    </div>
