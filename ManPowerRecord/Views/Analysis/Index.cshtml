@{ 
    ViewData["Title"] = "Analysis";
}
<div class="row pt-3 px-3">
    <div class="col-xl-4 col-md-8 pb-3">
        <select id="job_id" class="form-control">
            <option value="">Please Select Job</option>
        </select>
    </div>
    <div class="col-xl-2 col-md-4 pb-3">
        <button id="btn_analysis" type="button" class="btn btn-primary form-control elevation-1">
            <i class="fas fa-search"></i> Analysis
        </button>
    </div>
</div>
<div class="row px-3">
    <div class="col-xl-6">
        <div class="card card-dark">
            <div class="card-header">
                <span class="card-title"><i class="fas fa-clock"></i> Working Hours Ratio</span>
            </div>
            <div class="card-body">
                <div>
                    <canvas id="myChart1" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card card-dark">
            <div class="card-header">
                <span class="card-title">Chart 3</span>
            </div>
            <div class="card-body">
                <div>
                    <canvas id="myChart3" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-12">
        <div class="card card-dark">
            <div class="card-header">
                <span class="card-title">Table</span>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <table id="table_1" class="table table-sm table-bordered w-100">
                            <thead>
                                <tr>
                                    <th>H1</th>
                                    <th>H2</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>H1</th>
                                    <th>H2</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row px-3">
    <div class="col-xl-6">
        <div class="card card-dark">
            <div class="card-header">
                <span class="card-title">Chart 2</span>
            </div>
            <div class="card-body">
                <div>
                    <canvas id="myChart2" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card card-dark">
            <div class="card-header">
                <span class="card-title">Chart 4</span>
            </div>
            <div class="card-body">
                <div>
                    <canvas id="myChart4" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-12">
        <div class="card card-dark">
            <div class="card-header">
                <span class="card-title">Table</span>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <table id="table_2" class="table table-sm table-bordered w-100">
                            <thead>
                                <tr>
                                    <th>H1</th>
                                    <th>H2</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>H1</th>
                                    <th>H2</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script type="text/javascript">

        $(document).ready(function () {
            GetJobs().then(() => GenerateJobOptions());
        });

        $('#table_1').DataTable();
        $('#table_2').DataTable();

        var jobs = [];
        async function GetJobs() {
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetJobs", "Job")',
	            contentType: 'application/x-www-form-urlencoded',
                data: {
                },
                success: function (response) {
                    console.log("Jobs");
                    console.log(response);
                    jobs = response;
                }
            });
        }

        function GenerateJobOptions() {
            $('#job_id').empty();
            var job_str = '<option value="" selected disabled>Please Select Job</option>';
            for (var i = 0; i < jobs.length; i++) {
                job_str += '<option value="' + jobs[i].job_id + '">' + jobs[i].job_name + '</option>';
            }
            $('#job_id').append(job_str);
        }

        const ctx1 = document.getElementById('myChart1').getContext('2d');
        const myChart1 = new Chart(ctx1, {
            type: 'doughnut',
            data: {
                labels: ['Initiation', 'Planning', 'Execution', 'Management', 'Review'],
                datasets: [{
                    label: '# of Votes',
                    data: [12, 19, 3, 5, 2],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'right'
                    },
                },
            }
        });

        const ctx2 = document.getElementById('myChart2').getContext('2d');
        const myChart2 = new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
                datasets: [{
                    label: '# of Votes',
