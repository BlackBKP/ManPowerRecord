@{ 
    ViewData["Title"] = "Monthly Working Hours";
}
<div class="row px-3 pt-3">
    <div class="col-xl-2 col-lg-4 col-md-4 pb-3">
        <input id="whs_month" type="month" class="form-control"/>
    </div>
    <div class="col-xl-1 col-lg-4 col-md-4 pb-3">
        <button id="btn_load" type="button" class="btn btn-primary form-control elevation-1">
            <i class="fas fa-sync"></i> Load
        </button>
    </div>
    <div class="col-xl-1 col-lg-4 col-md-4 pb-3">
        <button id="btn_print" type="button" class="btn btn-success form-control elevation-1">
            <i class="fas fa-file-excel"></i> Export
        </button>
    </div>
</div>
<div class="row px-3">
    <div class="col-xl-8">
        <div class="card card-dark">
            <div class="card-header">
                <span class="card-title">2022 February - Working Hours Report</span>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <span>Record of Working Hours in February 2022</span>
                    </div>
                    <div class="form-group">
                        <table id="table_whs" class="table table-sm table-hover text-center w-100">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Job</th>
                                    <th>Start</th>
                                    <th>Stop</th>
                                    <th>Lunch</th>
                                    <th>Break</th>
                                    <th>Normal (Hours)</th>
                                    <th>OT 1.5 (Hours)</th>
                                    <th>OT 3.0 (Hours)</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Date</th>
                                    <th>Job</th>
                                    <th>Start</th>
                                    <th>Stop</th>
                                    <th>Lunch</th>
                                    <th>Break</th>
                                    <th>Normal (Hours)</th>
                                    <th>OT 1.5 (Hours)</th>
                                    <th>OT 3.0 (Hours)</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <div class="card card-dark">
            <div class="card-header">
                <span class="card-title">Summary</span>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <span>Summary of Working Hours by Jobs</span>
                    </div>
                    <div class="form-group">
                        <table id="table_summary" class="table table-sm table-striped table-hover w-100">
                            <thead class="text-center">
                                <tr>
                                    <th>Job</th>
                                    <th>Normal</th>
                                    <th>OT 1.5</th>
                                    <th>OT 3.0</th>
                                </tr>
                            </thead>
                            <tfoot class="text-center">
                                <tr>
                                    <th>Job</th>
                                    <th>Normal</th>
                                    <th>OT 1.5</th>
                                    <th>OT 3.0</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="form-group">
                        <span>Total working hours</span>
                    </div>
                    <dl class="form-group row">
                        <dt class="col-6 text-left pl-3">1. Normal</dt>
                        <dd class="col-6 text-right pr-3">0 Hours</dd>
                        <dt class="col-6 text-left pl-3">2. OT 1.5</dt>
                        <dd class="col-6 text-right pr-3">0 Hours</dd>
                        <dt class="col-6 text-left pl-3">3. OT 3.0</dt>
                        <dd class="col-6 text-right pr-3">0 Hours</dd>
                        <dt class="col-6 text-left pl-3">4. Total</dt>
                        <dd class="col-6 text-right pr-3">0 Hours</dd>
                    </dl>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script type="text/javascript">
        var table;

        $(document).ready(function () {
            GetWorkingHours();
        });

        function GetWorkingHours() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetWorkingHours", "MonthlyWorkingHours")',
	            contentType: 'application/x-www-form-urlencoded',
                data: {
                },
                success: function (response) {
                    GenerateTable(response);
                }
            });
        }

        function GenerateTable(whs) {
            var datas = [];

            for (var i = 0; i < whs.length; i++) {
                datas.push([
                    whs[i].working_date.split("T")[0],
                    "", "","", "", "", 0, 0, 0
                ]);
            }

            if (table !== undefined)
                table.DataTable().destroy();

            $('#table_whs').DataTable({
                iDisplayLength: -1,
                info: false,
                paging: false,
                searching: false,
                ordering: false,
                data: datas,
                rowCallback: function (row, data) {
                    var date = new Date(data[0].split("-")[0], data[0].split("-")[1], data[0].split("-")[2]);
                    if (date.toString().split(" ")[0] == "Sat" || date.toString().split(" ")[0] == "Sun")
                        $('td', row).addClass("bg-gray disabled");
                }
            });

            $('#table_summary').DataTable({
                iDisplayLength: -1,
                info: false,
                paging: false,
                searching: false,
                ordering: false,
            });
        }

    </script>
}